{
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "strict": 0,
        "quotes": 0,
        "no-unused-vars": 0,
        "camelcase": 0,
        "no-underscore-dangle": 0
        "quotes": ["error", "single", { "allowTemplateLiterals": true, avoidEscape: true}],
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": [
          "error",
          "single",
          { "allowTemplateLiterals": true, "avoidEscape": true }
        ],
        "semi": ["error", "always"]
    }
}
